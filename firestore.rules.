rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Schema Validation Functions
    function isUser(data) {
      return data.email is string &&
             (data.keys().hasOnly(['email', 'name']));
    }
    
    function isTask(data) {
      return data.name is string &&
             data.priority is string && ['High', 'Medium', 'Low'].hasAny([data.priority]) &&
             data.status is string && ['To Do', 'In Progress', 'Done'].hasAny([data.status]) &&
             data.userId == request.auth.uid &&
             (data.description == null || data.description is string) &&
             (data.dueDate == null || data.dueDate is string);
    }

    function isNote(data) {
        return data.userId == request.auth.uid &&
               data.title is string &&
               data.content is string &&
               data.createdAt is timestamp;
    }

    function isFile(data) {
        return data.userId == request.auth.uid &&
               data.name is string &&
               data.type is string &&
               data.size is number &&
               data.uploadDate is timestamp &&
               data.storagePath is string;
    }
    
    function isContact(data) {
        return data.userId == request.auth.uid &&
               data.name is string &&
               data.email is string &&
               data.status is string && ['Lead', 'Customer', 'Archived'].hasAny([data.status]) &&
               (data.company == null || data.company is string);
    }

    function isNotification(data) {
        return data.userId == request.auth.uid &&
               data.type is string &&
               data.message is string &&
               data.createdAt is timestamp &&
               data.isRead is bool;
    }

    match /users/{userId} {
      allow read, delete: if isOwner(userId);
      allow create: if isOwner(userId) && isUser(request.resource.data);
      allow update: if isOwner(userId) && isUser(request.resource.data);
      
      match /tasks/{taskId} {
        allow read, delete: if isOwner(userId);
        allow create: if isOwner(userId) && isTask(request.resource.data);
        allow update: if isOwner(userId) && isTask(request.resource.data);
      }
      
      match /notes/{noteId} {
        allow read, delete: if isOwner(userId);
        allow create: if isOwner(userId) && isNote(request.resource.data);
        allow update: if isOwner(userId) && isNote(request.resource.data);
      }

      match /files/{fileId} {
         allow read, delete: if isOwner(userId);
         allow create: if isOwner(userId) && isFile(request.resource.data);
         allow update: if isOwner(userId) && isFile(request.resource.data);
      }

      match /contacts/{contactId} {
        allow read, delete: if isOwner(userId);
        allow create: if isOwner(userId) && isContact(request.resource.data);
        allow update: if isOwner(userId) && isContact(request.resource.data);
      }

       match /notifications/{notificationId} {
        allow read, delete: if isOwner(userId);
        allow create: if isOwner(userId) && isNotification(request.resource.data);
        allow update: if isOwner(userId) && isNotification(request.resource.data);
      }
    }

    match /roadmap/{itemId} {
      allow read: if true;
      allow write: if false; // Managed from the backend
    }
  }
}
